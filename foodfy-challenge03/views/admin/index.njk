{% extends 'layout_admin.njk' %}

{% block content %}

    <h2>Gerenciar receitas</h2>
    <a class="button" href="/admin/recipes/create">Nova receita</a>
    <div class="admin-recipes">
        {% for recipe in recipes %}
            <div class="admin-recipe" id="{{recipe.id}}">
                <div class="admin-recipe-img">
                    <img src="{{recipe.image}}" alt="{{recipe.title}}">
                </div>
                <div class="admin-recipe-info">
                    <p>{{recipe.title}}</p>
                    <p>por {{recipe.author}}</p>
                    <a id='{{recipes.indexOf(recipe)}}'>Visualizar</a>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock content %}