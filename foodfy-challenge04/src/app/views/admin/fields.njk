<div class="item">
    <div>Imagem da receita *</div>
    <input
        type="url"
        name="image"
        placeholder="http://"
        value="{{recipe.image}}"
    />
</div>

<div class="item">
    <div>Nome da receita *</div>
    <input
        type="text"
        name="title"
        value="{{recipe.title}}"
    />
</div>

<div class="item">
    <div>Chef *</div>
    <select name="chef">
        {% for chef in chefOptions %}
            <option value="{{chef.id}}" {% if recipe.chef_id == chef.id %}selected{% endif %}>
                {{chef.name}}
            </option>
        {% endfor %}
    </select>
</div>

<div class="item" id="ingredients">
    <div>Ingredientes *</div>
    {% if recipe.ingredients.length > 0 %}
        {% for ingredient in recipe.ingredients %}
            <div class="ingredient">
                <input
                    type="text"
                    name="ingredients[]"
                    value="{{ingredient}}"
                    placeholder="Ingrediente"
                />
            </div>
        {% endfor %}
    {% else %}
        <div class="ingredient">
            <input
                type="text"
                name="ingredients[]"
                value="{{ingredient}}"
                placeholder="Novo ingrediente"
            />
        </div>
    {% endif %}
</div>
<button type="button" class="add-ingredient">Adicionar novo ingrediente</button>

<div class="item" id="preparation">
    <div>Modo de preparo *</div>
    {% if recipe.preparation.length > 0 %}
        {% for step in recipe.preparation %}
            <div class="step">
                <input
                    type="text"
                    name="preparation[]"
                    value="{{step}}"
                    placeholder="Novo passo"
                />
            </div>
        {% endfor %}
    {% else %}
        <div class="step">
            <input
                type="text"
                name="preparation[]"
                value="{{step}}"
                placeholder="Novo passo"
            />
        </div>  
    {% endif %}  
</div>
<button type="button" class="add-preparation">Adicionar novo passo</button>

<div class="item">
    <div>Informações adicionais</div>
    <textarea 
        name="information"
        rows="10">{{recipe.information}}</textarea>
</div>