{% extends 'layout.njk' %}

{% block head %}
    <title>Receitas - Foodfy</title>
{% endblock %}

{% block content %}
        <div class="recipes">
            {% for recipe in recipes %}
            <div class="recipe" id='{{recipes.indexOf(recipe)}}'}>
                <div class="recipe-image">
                    <img src="{{recipe.imageMini}}" alt="{{recipe.title}}">
                </div>
                <div class="recipe-info">
                    <p class="recipe-name">{{recipe.title}}</p>
                    <p class="recipe-author">por {{recipe.author}}</p>
                </div>
            </div>
            {% endfor %}
        </div>

{% endblock %}