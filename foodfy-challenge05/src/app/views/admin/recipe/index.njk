{% extends 'layout_admin.njk' %}

{% block content %}

    <h2>Gerenciar receitas</h2>
    <a class="button" href="/admin/recipes/create">Nova receita</a>
    <div class="admin-recipes">
        {% for recipe in recipes %}
            <div class="admin-recipe">
                <div class="admin-recipe-img">
                    <img src="{{recipe.file.src}}" alt="{{recipe.title}}">
                </div>
                <div class="admin-recipe-info">
                    <p>{{recipe.title}}</p>
                    <p>por {{recipe.chef_name}}</p>
                    <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                </div>
            </div>
        {% endfor %}
    </div>
    
{% endblock content %}