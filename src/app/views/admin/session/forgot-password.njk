{% extends 'layout_session.njk' %}

{% block content %}
<form action="/admin/users/forgot-password" method="POST">

    <h2>Esqueceu a Senha?</h2>

    <div class="session-fields">
        <div class="item">
            <div class="field-title">Email</div>
            <input
                type="email"
                name="email"
                placeholder="Digite seu email para recuperar sua senha"
                value="{{user.email}}"
                onblur="Validate.apply(this, 'isEmail')"
            />
        </div>
    </div>

    <button class="button" type="submit">Recuperar</button>

</form>

{% endblock content %}