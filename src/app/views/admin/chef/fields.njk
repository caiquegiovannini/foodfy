<div class="item">
    <div class="field-title">Nome *</div>
    <input
        type="text"
        name="name"
        value="{{chef.name}}"
    />
</div>

<div class="item">
    <div class="field-title">Avatar *</div>
    <div class="avatar-path" id={{avatar.id}}>
        <span>{{avatar.src}}</span>
        <i class="material-icons"
            onclick="PhotosUpload.removeOldPhoto(event)"
        >close</i>
    </div>
    <input type="hidden" name="removed_files">

    <div class="avatar-upload">
        <input 
            id="avatar-input"
            type="file" 
            name="avatar"
            accept="image/*"
            onload="PhotosUpload.handleFileInput(event)"
        >
        <p>Enviar Avatar</p>
    </div>
</div>