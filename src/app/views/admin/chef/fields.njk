<div class="item">
    <div class="field-title">Nome *</div>
    <input
        type="text"
        name="name"
        value="{{chef.name}}"
    />
</div>

<div class="item">
    <div class="field-title">Avatar *</div>
    {% if avatar %}
        <div class="avatar-path" id={{avatar.id}}>
            <span>{{avatar.src}}</span>
        </div>
    {% endif %}

    <div class="avatar-upload" id="{{avatar.id}}">
        <input 
            id="avatar-input"
            type="file" 
            name="avatar"
            accept="image/*"
            onload="PhotosUpload.handleFileInput(event)"
        >
        <p>Enviar Avatar</p>
    </div>
    <input type="hidden" name="removed_files">

</div>