{% extends 'layout_admin.njk' %}

{% block content %}

    <section style="margin-bottom: 8px">
        <h2>Chef: {{chef.name}}</h2>
        <a class="button" href="/admin/chefs/{{chef.id}}/edit">Editar chef</a>
    </section>

    <section class="chef-header">
        <div>
            <img src="{{chef.path}}" alt="{{chef.name}}">
            <p class="chef-name">{{chef.name}}</p>
            {% if chef.total_recipes == 1 %}
                <p>{{chef.total_recipes}} receita</p>
            {% else %}
                <p>{{chef.total_recipes}} receitas</p>
            {% endif %}
        </div>
    </section>

    <section style="margin-bottom: 50px">
        <h2>Receitas</h2>
        <div class="admin-recipes">
        {% for recipe in chef.recipes %}
            <div class="admin-recipe">
                <div class="admin-recipe-img">
                    <img src="{{image.src}}" alt="{{recipe.title}}">
                </div>
                <div class="admin-recipe-info">
                    <p>{{recipe.title}}</p>
                    <p>por {{chef.name}}</p>
                    <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                </div>
            </div>
        {% endfor %}
    </div>
    </section>

{% endblock content %}