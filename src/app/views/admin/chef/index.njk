{% extends 'layout_admin.njk' %}

{% block content %}

    <h2>Gerenciar chefs</h2>
    {% if userIsAdmin %}
        <a class="button" href="/admin/chefs/create">Novo chef</a>
    {% endif %}
    <div class="admin-chefs">
        {% for chef in chefs %}
            <div class="admin-chef">
                {% if chef.path %}
                <span style="background-image: url({{chef.path}})"></span>
                {% endif %}
                <div class="admin-chef-info">
                    <p>{{chef.name}}</p>
                    <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock content %}