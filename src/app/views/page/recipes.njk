{% extends 'layout.njk' %}

{% block head %}
    <title>Receitas - Foodfy</title>
{% endblock %}

{% block content %}
        <div class="recipes">
            {% for recipe in recipes %}
            <div class="recipe" id='{{recipe.id}}'}>
                <div class="recipe-image">
                    <img src="{{recipe.file.src}}" alt="{{recipe.title}}">
                </div>
                <div class="recipe-info">
                    <p class="recipe-name">{{recipe.title}}</p>
                    <p class="recipe-author">por {{recipe.chef_name}}</p>
                </div>
            </div>
            {% endfor %}
        </div>

        <div class="pagination"
            data-page={{pagination.page}}
            data-total={{pagination.total}}
        ></div>

{% endblock %}